<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>NOT(IsClosed)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval submitted to Opportunity Owner</label>
        <name>Approval_submitted_to_Opportunity_Owner</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>adrienne.davis@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>bryan.murphy@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>clay.swenson@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>emily.autrey@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>grant.rosen@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>julia.miller@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(IsClosed,CONTAINS( Owner_Role__c ,&quot;US&quot;))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval submitted to US approvers</label>
        <name>Approval_submitted_to_US_approvers</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>florian.rohde@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>icheung@datapipe.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>subah.kohli@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(IsClosed,CONTAINS(Owner_Group__c ,&quot;Asia&quot;))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval submitted to Asia approvers</label>
        <name>Approval_submitted_to_Asia_approvers</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>amelia.betteridge@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>florian.rohde@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(IsClosed,CONTAINS( Owner_Group__c ,&quot;ANZ&quot;))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval submitted to ANZ approvers</label>
        <name>Approval_submitted_to_ANZ_approvers</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>begona.fuentes@rax.co.uk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>shanwaz.ahmed@rackspace.co.uk.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>steve.jun@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>vali.stanciu@rackspace.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If the opportunity role is not in the US, then the following business managers should be approvers</description>
        <entryCriteria>
            <formula>AND(IsClosed,
OR(NOT(CONTAINS( Owner_Role__c ,&quot;US&quot;)),ISBLANK(Owner_Role__c)),
NOT(CONTAINS(&apos;ANZ,Asia&apos;,(Owner_Group__c))) 
)</formula>
        </entryCriteria>
        <label>Approval submitted to INTL approvers</label>
        <name>Approval_submitted_to_INTL_approvers</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Approval_Process_Templates/Opportunity_Request_Team_Mem_Access</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Access_Request_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notify_Requester_after_approval</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Access_Request_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notify_Requester_after_rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Opportunity Request Access v1.1</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
