<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>barbara.trevino@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>chris.gell@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>james.yu@rackspace.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>judy.vansell@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>kim.moczygemba@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <approver>
                <name>luke.jemmott@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <emailTemplate>Channel_Email_Templates/Partner_Role_Approval_to_the_approvers</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND( ISPICKVAL(Status__c , &apos;Pending Approval&apos;), Is_Approval__c &lt;&gt; true )</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_set_to_false_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approved_status_update_to_Partner_Role_owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Partner_Approval_checkbox_set_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Field_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_set_to_false_Rejection</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected_status_update_to_Partner_Role_owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Field_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_set_to_true</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_update_to_Partner_Role_owner</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Partner Role Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
