<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>pse__Resource__c</field>
        <field>pse__Project__c</field>
        <field>pse__Milestone__c</field>
        <field>pse__Start_Date__c</field>
        <field>pse__End_Date__c</field>
        <field>pse__Total_Hours__c</field>
        <field>pse__Total_Billable_Amount__c</field>
        <field>pse__Sunday_Hours__c</field>
        <field>pse__Monday_Hours__c</field>
        <field>pse__Tuesday_Hours__c</field>
        <field>pse__Wednesday_Hours__c</field>
        <field>pse__Thursday_Hours__c</field>
        <field>pse__Friday_Hours__c</field>
        <field>pse__Saturday_Hours__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>pse__Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>TEXT(pse__Project__r.Timecard_Approver__c) = &quot;Project Manager&quot;</formula>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>PM Approves Timecard</label>
        <name>PM_Approves_Timecard</name>
    </approvalStep>
    <description>If Project has a PM, PM approves timecard (unless the PM is submitting his/her own timecard)</description>
    <emailTemplate>PSA_Email_Templates/PSA_Timecard_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND( 
 pse__Approved__c = FALSE,
ISPICKVAL(pse__Status__c, &quot;Submitted&quot;), 
ISPICKVAL( pse__Project__r.Timecard_Approver__c , &quot;Project Manager&quot;) 
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSA_Timecard_Approved_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_IFF_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSA_Timecard_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_IFF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Rejected_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PSA_Timecard_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PSA_Set_Submitted_Flag_To_True</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PSA PM Approves Timecard</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>PSA_Timecard_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_IFF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Status_Saved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
