<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>pse__Project__c</field>
        <field>pse__Resource__c</field>
        <field>pse__Assignment__c</field>
        <field>pse__Total_Billable_Amount__c</field>
        <field>pse__Total_Non_Billable_Amount__c</field>
        <field>pse__Total_Reimbursement_Amount__c</field>
        <field>pse__First_Expense_Date__c</field>
        <field>pse__Last_Expense_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>pse__Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>PM Approvers ER</label>
        <name>PM_Approvers_ER</name>
    </approvalStep>
    <description>For Projects with a PM, PM approves (unless PM is submitting his/her own Expense Report)</description>
    <emailTemplate>PSA_Email_Templates/PSA_Expense_Report_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>(LEN ( pse__Approver__c ) &gt; 0 &amp;&amp; 
(pse__Approver__r.Id &lt;&gt; pse__Resource__r.pse__Salesforce_User__r.Id)) &amp;&amp; (ISPICKVAL( pse__Status__c , &apos;Draft&apos;) || 
ISPICKVAL( pse__Status__c , &apos;Submitted&apos;) || 
ISPICKVAL( pse__Status__c , &apos;Rejected&apos;))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSA_ER_Approved_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_IFF_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSA_ER_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Disable_Auto_Submit_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_IFF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Rejected_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PSA_ER_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Expense_Report_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PSA_Disable_Auto_Submit_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Set_ER_Submitted_True</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PSA PM Approves Expense Report</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>PSA_ER_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Disable_Auto_Submit_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_IFF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Status_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
