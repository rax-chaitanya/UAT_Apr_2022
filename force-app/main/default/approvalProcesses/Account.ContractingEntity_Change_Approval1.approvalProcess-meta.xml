<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dorothea.brueggler@rackspace.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>joe.sweeney@rackspace.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account.ShippingCountry</field>
                <operation>equals</operation>
                <value>United States</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Contracting Entity US</label>
        <name>Contracting_Entity_US</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dorothea.brueggler@rackspace.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>joe.sweeney@rackspace.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>ShippingCountry  &lt;&gt; &apos;United States&apos;</formula>
        </entryCriteria>
        <label>Contracting Entity Intl</label>
        <name>Contracting_Entity_Intl</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>unfiled$public/Contracting_Entity_to_Approval_New</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.Contracting_Entity_Change__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Contracting_Entity_Change</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ContractingEntityApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Contracting_Entity_Change</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ContractingEntityRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Request_for_Contracting_Entity_change_has_been_rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>ContractingEntity Change Approval</label>
    <processOrder>10</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
