<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Partner_License_Type__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dafne.manus@rackspace.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>luke.jemmott@rackspace.com.rax</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND( 
 CONTAINS($Label.Partner_Portal_Profile,CreatedBy.Profile.Name) ,CONTAINS( $Label.Company_Partner_RecordTypeID,RecordTypeId  ),CONTAINS( Owner_Name__c, &apos;LATAM&apos;)
   )</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Alert_when_Application_is_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Partner_Account_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Partner_Account_Type_to_Partner</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Alert_when_Application_is_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Upadate_Partner_Account_StatusToRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Owner_To_Luke</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Partner_Account_Status_To_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Partner_Account_Type</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approve Partner Account LATAM</label>
    <processOrder>7</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
