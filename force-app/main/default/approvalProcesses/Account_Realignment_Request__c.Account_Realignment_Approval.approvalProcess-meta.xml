<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Approval_date__c</field>
        <field>Approver__c</field>
        <field>Business_Manager__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>First Level Approval Step for Account Realignment Approval Process</description>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Realignment_Request__c.Approver_Type__c</field>
                <operation>equals</operation>
                <value>Manager</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Manager Approval Step</label>
        <name>Manager_Approval_Step</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Business_Managers_APAC</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Realignment_Request__c.Approver_Type__c</field>
                <operation>equals</operation>
                <value>Business Manager</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account_Realignment_Request__c.Region__c</field>
                <operation>equals</operation>
                <value>APAC</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>APAC Business Manager Group Approval</label>
        <name>APAC_Business_Manager_Group_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Business_Managers_EMEA</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Realignment_Request__c.Approver_Type__c</field>
                <operation>equals</operation>
                <value>Business Manager</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account_Realignment_Request__c.Region__c</field>
                <operation>equals</operation>
                <value>EMEA</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>EMEA Business Manager Group Approval</label>
        <name>EMEA_Business_Manager_Group_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Business_Managers_US</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Realignment_Request__c.Approver_Type__c</field>
                <operation>equals</operation>
                <value>Business Manager</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account_Realignment_Request__c.Region__c</field>
                <operation>notEqual</operation>
                <value>APAC,EMEA</value>
            </criteriaItems>
        </entryCriteria>
        <label>US Business Manager Group Approval</label>
        <name>US_Business_Manager_Group_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval Process for Global Account Realignment .</description>
    <emailTemplate>Global_Account_Realignment/GTMO_Approval_Email_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account_Realignment_Request__c.Approver__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Realignment_Request__c.Approver_Type__c</field>
            <operation>notEqual</operation>
            <value>Self</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Realignment_Request__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Approved,Rejected,Auto Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Status_Update_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Status_Update_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Pending_For_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Submitter_Email_Alert</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Account Realignment Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
