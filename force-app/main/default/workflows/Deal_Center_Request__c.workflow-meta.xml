    <rules>
        <fullName>NewSfdcToFusion-CreateDealCenterRequest</fullName>
        <actions>
            <name>NewSfdcToFusion_CreateDealCenterRequest</name>
            <type>OutboundMessage</type>
        </actions>
        <active>true</active>
        <description>New Salesforce to FMW Integration (Deal Center Request) - Create action to Create Sort Engagement in Current Salesforce.</description>
        <formula>AND(NOT(CONTAINS($Label.SkipUserIDs,$User.Id)), ISBLANK(Old_Record_Id__c ),  NOT(ISBLANK(Opportunity__r.Old_Record_Id__c)))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
