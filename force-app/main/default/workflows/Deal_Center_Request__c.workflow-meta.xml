    <rules>
        <fullName>Deal Center Request  Notification</fullName>
        <actions>
            <name>When_a_Deal_Center_record_is_created_send</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Deal_Center_Request__c.Name</field>
            <operation>notEqual</operation>
            <value>null</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Owner_Role__c</field>
            <operation>startsWith</operation>
            <value>US</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Deal Center Request Alert</fullName>
        <active>false</active>
        <booleanFilter>(1 or 2 or 3) and 4</booleanFilter>
        <criteriaItems>
            <field>Deal_Center_Request__c.RFI_RFQ__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Deal_Center_Request__c.SOQ__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Deal_Center_Request__c.Questionairre__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Owner_Role__c</field>
            <operation>startsWith</operation>
            <value>US</value>
        </criteriaItems>
        <description>If someone submits a Deal Center Request, and clicks any of the following:
•	RFI/RFQ
•	SOQ
•	QUESTIONAIRRE</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
