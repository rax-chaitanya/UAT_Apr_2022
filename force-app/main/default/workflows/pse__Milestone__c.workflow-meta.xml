    <rules>
        <fullName>PSA Actual Date Approves And Closes Milestone</fullName>
        <actions>
            <name>PSA_Milestone_Approved_True</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>PSA_Milestone_Closed_For_Expense_True</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>PSA_Milestone_Closed_For_Time_Entry_True</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>PSA_Milestone_IFF_True</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>When Milestone Actual Date is entered, Milestone is Approved</description>
        <formula>Not(isblank(pse__Actual_Date__c))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PSA Delivery Milestone Default Values Moved from Onica</fullName>
        <actions>
            <name>Exclude_from_Billing_True</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>pse__Milestone__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Deliverable Milestone</value>
        </criteriaItems>
        <description>Deliverable Milestone Default Values  - Moved from Onica
Exclude from billing = True 
Milestone amount = zero</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
