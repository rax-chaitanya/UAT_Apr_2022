    <rules>
        <fullName>PSA New Sprint Milestone - Move from Onica</fullName>
        <actions>
            <name>PSA_New_Sprint_Created</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>pse__Milestone__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Fixed Fee Milestone</value>
        </criteriaItems>
        <criteriaItems>
            <field>pse__Milestone__c.Exclude_from_Sprint_Calculations__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>pse__Milestone__c.Name</field>
            <operation>contains</operation>
            <value>sprint</value>
        </criteriaItems>
        <description>This rule is to notify Finance when a new milestone is created on a T&amp;M - Sprint project. - Moved from Onica</description>
        <triggerType>onAllChanges</triggerType>
