    <rules>
        <fullName>PSA MS BE Release %3D True</fullName>
        <actions>
            <name>PSA_MS_status_Invoiced</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>When the BE is released the MS status auto changes to  invoiced</description>
        <formula>NOT( ISNULL( pse__Billing_Event_Released__c) )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PSA Milestone Billed- Moved from Onica</fullName>
        <actions>
            <name>PSA_Update_Milestone_Status_to_Billed</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>pse__Milestone__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Fixed Fee Milestone</value>
        </criteriaItems>
        <criteriaItems>
            <field>pse__Milestone__c.pse__Billed__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>pse__Milestone__c.pse__Invoiced__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>Update Milestone Status to Billed</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
