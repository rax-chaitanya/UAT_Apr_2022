<aura:component >
    <aura:attribute name="message" type="String" default="Warning!"/>
    <aura:attribute name="visible" type="Boolean" default="true"/>
    <aura:if isTrue="{!v.visible}">
        <div class="slds-notify slds-notify_alert slds-theme_alert-texture slds-theme_warning" role="alert">
            <span class="slds-assistive-text">warning</span>
            <span class="slds-icon_container slds-icon-utility-warning slds-m-right_x-small" title="Description of icon when needed">
                <lightning:icon iconName="utility:warning" size="small" class="slds-iconclass"/>
            </span>
            <h2 class="slds-text-heading_small">{!v.message}</h2>
        </div>
    </aura:if>
</aura:component>