<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>pse__Project_Or_Opp_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND (
    LEN(pse__Opportunity__c) = 0,
    LEN(pse__Project__c) = 0
)</errorConditionFormula>
    <errorMessage>An Opportunity or Project must be set.</errorMessage>
</ValidationRule>
