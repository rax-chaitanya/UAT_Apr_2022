<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>pse__Parent_Task_Project_Mismatch</fullName>
    <active>true</active>
    <description>Parent Task Project must match Task Project.</description>
    <errorConditionFormula>AND(NOT(ISBLANK(pse__Parent_Task__c)), pse__Parent_Task__r.pse__Project__c != pse__Project__c)</errorConditionFormula>
    <errorDisplayField>pse__Parent_Task__c</errorDisplayField>
    <errorMessage>Parent Task Project must match Task Project.</errorMessage>
</ValidationRule>
