<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>pse__Budget_Header_Account_Mismatch</fullName>
    <active>true</active>
    <errorConditionFormula>AND(LEN(pse__Budget_Header__c)&gt;0, pse__Budget_Header__r.pse__Account__c != pse__Account__c)</errorConditionFormula>
    <errorDisplayField>pse__Budget_Header__c</errorDisplayField>
    <errorMessage>The budget header&apos;s account must match the account on this budget</errorMessage>
</ValidationRule>
