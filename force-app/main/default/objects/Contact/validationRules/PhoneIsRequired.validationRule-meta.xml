<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PhoneIsRequired</fullName>
    <active>true</active>
    <description>Phone cannot be blank</description>
    <errorConditionFormula>AND(RecordType.Name = &quot;Employee&quot;, ISBLANK(Phone))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Phone cannot be blank</errorMessage>
</ValidationRule>
