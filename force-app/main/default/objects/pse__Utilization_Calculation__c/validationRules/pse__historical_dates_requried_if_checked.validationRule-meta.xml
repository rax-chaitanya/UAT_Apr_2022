<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>pse__historical_dates_requried_if_checked</fullName>
    <active>true</active>
    <errorConditionFormula>AND( pse__Calculate_Historical_Utilization__c, OR(ISBLANK(pse__Historical_Utilization_Start_Date__c), ISBLANK(pse__Historical_Utilization_End_Date__c)))</errorConditionFormula>
    <errorDisplayField>pse__Calculate_Historical_Utilization__c</errorDisplayField>
    <errorMessage>Historical Start and End Date are required</errorMessage>
</ValidationRule>
