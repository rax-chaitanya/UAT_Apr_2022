<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NewRequestShouldBeInDraftStatus</fullName>
    <active>true</active>
    <errorConditionFormula>ISNEW() &amp;&amp;   NOT(ISPICKVAL( Status , &apos;Draft&apos;) )</errorConditionFormula>
    <errorDisplayField>Status</errorDisplayField>
    <errorMessage>Status should be in Draft</errorMessage>
</ValidationRule>
